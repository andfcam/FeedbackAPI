@model IEnumerable<FeedbackAPI.Data.Models.Request>

@{
    const string url = "https://dev-dataplatform.landmarkstaging.co.uk/DataValidation/SiteSearch?SiteSearchType=SiteSearch&Page=1&Size=10&SiteName=";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Action)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Action)
            </td>
            <td>
                @Html.ActionLink("View Details", "Details", new { id = item.Id })
                | <a href=@(url + item.SiteId) target="_blank">Link to APDP</a>
                @Html.Partial("_RequestedActionLinks", item)
            </td>   
        </tr>
    }

</table>

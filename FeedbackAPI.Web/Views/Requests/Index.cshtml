@model IEnumerable<FeedbackAPI.Data.Models.Request>

@{
    ViewBag.Title = "Requests";
}

<h2>Requests</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Simulate New Request" class="btn btn-default" />
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SiteId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Action)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Action)
        </td>
        <td>
            @Html.ActionLink("View Details", "Details", new { id = item.Id }) |
            <a href=@($"https://dev-dataplatform.landmarkstaging.co.uk/DataValidation/SiteSearch?SiteSearchType=SiteSearch&Page=1&Size=10&SiteName={item.SiteId}") target="_blank">Link to APDP</a> |
            @Html.ActionLink("Accept", "Accept", new { id = item.Id }) |
            @Html.ActionLink("Reject", "Reject", new { id = item.Id })
        </td>
    </tr>
}

</table>

@model FeedbackAPI.Web.Models.StatusRequests

@{
    ViewBag.Title = "Requests";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <input type="submit" value="Simulate New Request" class="btn btn-default" formaction="@Url.Action("CreateRequest")"/>
    </div>
}

<h3>Open Requests</h3>
@Html.Partial("_RequestTable", Model.Requested)

<h3>Accepted Requests</h3>
@Html.Partial("_RequestTable", Model.Accepted)

<h3>Rejected Requests</h3>
@Html.Partial("_RequestTable", Model.Rejected)
